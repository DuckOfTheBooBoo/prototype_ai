# Fraud Detection API Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
FLASK_DEBUG=false

# HuggingFace Model Repository
# Set this to your HuggingFace repository ID to load models from HuggingFace
# Example: HF_REPO_ID=username/fraud-detection-model
HF_REPO_ID=DuckOfTheBooBoo/fraud-detection-model

# WebSocket Configuration
# URL that frontend clients should use to connect
# If empty, frontend will fetch from /config endpoint
WEBSOCKET_URL=

# WebSocket path (usually /socket.io)
WEBSOCKET_PATH=/socket.io
